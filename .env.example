# ========================================
# INTELLIGENT LOAN APPROVAL SYSTEM
# Environment Configuration Template
# ========================================

# Project Configuration
PROJECT_NAME=loan-status-prediction
VERSION=1.0.0
ENVIRONMENT=development

# Model Configuration
MODEL_TYPE=svm
MODEL_KERNEL=linear
MODEL_PATH=models/loan_approval_model.pkl
TRAINED_MODEL_VERSION=v1.0

# Dataset Configuration
DATASET_PATH=data/loan.csv
TRAIN_TEST_SPLIT=0.1
STRATIFY=True
RANDOM_STATE=2

# Credit Assessment Features (11 Features)
FEATURE_COUNT=11
MISSING_VALUE_STRATEGY=drop
LABEL_ENCODING=enabled

# SVM Hyperparameters
KERNEL=linear
C=1.0
GAMMA=scale
DEGREE=3
COEF0=0.0

# Model Performance Thresholds
ACCURACY_THRESHOLD=0.80
PRECISION_THRESHOLD=0.78
RECALL_THRESHOLD=0.75

# Loan Approval Categories
APPROVED_LABEL=1
REJECTED_LABEL=0

# Credit Scoring Ranges
EXCELLENT_CREDIT=750-850
GOOD_CREDIT=700-749
FAIR_CREDIT=650-699
POOR_CREDIT=300-649

# Stratification Settings
STRATIFY_BY=Loan_Status

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/loan_system.log
LOG_FORMAT=json
APPROVAL_AUDIT_LOG=logs/approval_audit.log

# API Configuration (Optional)
API_HOST=localhost
API_PORT=5000
API_VERSION=v1
API_KEY=your_api_key_here
API_RATE_LIMIT=100

# Database Configuration (Optional)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loan_predictions
DB_USER=fintech_admin
DB_PASSWORD=your_secure_password

# Banking API Integration (Optional)
CREDIT_BUREAU_API_KEY=your_credit_api_key
BANK_API_KEY=your_bank_api_key
UNDERWRITING_API_KEY=your_underwriting_key

# Performance Monitoring
METRICS_TRACKING=enabled
MODEL_MONITORING=True
DRIFT_DETECTION=enabled
PERFORMANCE_DASHBOARD=http://localhost:8080

# Visualization Settings
PLOT_STYLE=seaborn
COUNTPLOT_PALETTE=Set2
FIGURE_SIZE=10,6
SAVE_PLOTS=True
PLOT_DIR=plots/

# Testing Configuration
TEST_MODE=False
SYNTHETIC_DATA=disabled
TEST_APPLICATIONS=100
VALIDATION_DATASET=data/validation_set.csv

# Feature Engineering
CATEGORICAL_ENCODING=label
NUMERICAL_SCALING=disabled
FEATURE_SELECTION=enabled

# Model Interpretability
CONFUSION_MATRIX=enabled
CLASSIFICATION_REPORT=enabled

# Fair Lending Compliance
BIAS_DETECTION=enabled
FAIRNESS_METRICS=enabled
PROTECTED_ATTRIBUTES=Gender,Married
DISPARATE_IMPACT_THRESHOLD=0.8

# Data Privacy
ANONYMIZE_LOAN_ID=True
DATA_ENCRYPTION=enabled
AUDIT_LOGGING=enabled
GDPR_COMPLIANCE=enabled

# Backup & Recovery
AUTO_BACKUP=enabled
BACKUP_FREQUENCY=daily
BACKUP_PATH=backups/
RETENTION_DAYS=90

# Prediction Confidence
CONFIDENCE_THRESHOLD=0.75
UNCERTAINTY_ESTIMATION=enabled

# Credit Risk Analysis
DEFAULT_RATE_TRACKING=enabled
RISK_SEGMENTATION=enabled
PORTFOLIO_ANALYSIS=enabled

# ========================================
# SECURITY WARNING
# ========================================
# Never commit actual credentials!
# Copy this file to .env and add real values
# Add .env to .gitignore for security
# ========================================